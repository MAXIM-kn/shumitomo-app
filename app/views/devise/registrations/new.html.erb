<%= render "shared/second-header"%>

<div class="sign-up-box">
  <div class="heading">新規会員登録</div>
</div>
<%= form_with model: @user, url: user_registration_path, class: 'registration-from', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-sign-input">
    <div class="input-content">
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">（必須）</span>
    </div>
    <%= f.text_field :nickname, class:"input-area", placeholder:"ニックネームを入力して下さい", maxlength:"20" %>
  </div>
  <div class="form-sign-input">
    <div class="input-content">
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">（必須）</span>
    </div>
    <%= f.email_field :email, class:"input-area", placeholder:"メールアドレスを入力して下さい", autofocus: true %>
  </div>
  <div class="form-sign-input">
    <div class="input-content">
      <label class="form-text">パスワード</label>
      <span class="indispensable">（必須）</span>
    </div>
    <%= f.password_field :password, class:"input-area", placeholder:"※半角英数字含む６文字以上で入力して下さい" %>
  </div>
  <div class="form-sign-input">
    <div class="input-content">
      <label class="form-text">パスワード（確認）</label>
      <span class="indispensable">（必須）</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-area", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-sign-input">
    <div class="profile-input-content">
      <label class="form-text">プロフィール</label>
      <span class="any">（任意）</span>
    </div>
    <%= f.text_area :profile, class:"profile-input-area", placeholder:"例)

野球が大好きです。一緒に野球観戦してくれる方を募集しています!!" %>
  </div>
  <div class="register-btn">
    <%= f.submit "会員登録" ,class:"register-botton" %>
  </div>
<% end %>