
<% if user_signed_in? %>
<div class="follower">
  <%= link_to "フォロー", follows_user_path(@user), class:"follows" %>
  <div class="follower-count-box">
    <%= @following_users.count %>
  </div>    
</div>
<div class="followed">
  <%= link_to "フォロワー", followers_user_path(@user), class:"followers" %>
  <div class="follower-count-box">
    <%= @follower_users.count %>
  </div>
</div>
<div class="followed-botton-area">
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
    <div class="followed-botton">
      <%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: "f-btn danger", remote: true %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"f-btn success", remote: true %>
    </div>
    <% end %>
  <% end %>
</div>
<% end %>
