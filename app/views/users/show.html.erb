<%= render "shared/second-header"%>

<div class="mypage-contents">
  <div class="my-box">
    <div class="my-heading"><%= "#{@user.nickname}さんのマイページ" %></div>
  </div>
  <div class="user-image-area">
    プロフィール画像
    <% if @user.image.present?%>
    <div class="image-display">
      <div class="image-outer">
        <div class="image-item">
          <%= @user.image %>
        </div>
      </div>
    </div>
    <% else %>
      <div class="image-nill-display">
        <div class="image-nill-outer">
           <p class="image-nill-item">no<br>image<p>
        </div>
      </div>
    <% end %>
  </div>
  <p class="profile-text">プロフィール</p>
  <div class="profile-area">
    <div class="profile">
      <%= @user.profile %>
    </div>
  </div>
  <% if user_signed_in? %>
  <div class="selection-field">
    <div class="follower">
      フォロー      
    </div>
    <div class="follower-count-box"></div>
    <div class="followed">
      フォロワー
    </div>
    <div class="follower-count-box"></div>
    <div class="email-box">
      <%# "ダイレクトメール機能実装時link_to記述"%>
      <%= image_tag("email.png", class:"email-image") %>
    </div>
  <% end %>
    <% unless current_user.id %>
      <div class="followed-botton-area">
        <div class="followed-botton">
          フォローする
        </div>
      </div>
    <% end %>
  </div>
  <div class="room-wrapper">
    <div class="room-area">
      <p class="room-text">投稿ルーム</p>  
      <div class="room">
        <% @chat_rooms.each do |chat_room| %>
          <div class="room-name-output">
            <%= link_to chat_room.name, chat_room_path(chat_room) %>
          </div>
        <% end %>
      </div>
    </div>
    <% if current_user.id == user_signed_in? %>
      <div class="room-area">
        <p class="room-text">参加ルーム</p>
        <div class="room"><div>
      </div>
    <% end %>
  </div>
</div>