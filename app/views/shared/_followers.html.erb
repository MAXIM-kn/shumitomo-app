<div class="followers-wrap">
  <p class="fw text">フォロワー list</p>
  <div class="fw-area">
    <div class="list followers">
    <% @users_follower.each do |user_f| %>
      <div class="user-contents">
      <% if user_f.image.present?%>
        <%= image_tag(user_f.image, class: "image-users")%>
      <% else %>
        <%= image_tag("nil-image.png", class: "image-users")%>
      <% end %>
      <%= link_to user_f.nickname, user_path(user_f), class:"fw-nickname" %>
      </div>
    <% end %>
    </div>
  </div>
</div>