<header class="header-area">
  <div class="header-contents">
    <div class="title-name">
      <%= link_to image_tag("title-logo.jpg", class:"title-icon"), root_path %>
    </div>
    <form class="search-form" action="https://shumitomo-app.herokuapp.com/" method="get" id="search-form">
      <input type="search" class='input-box' placeholder='キーワードを入力'>
      <input type="submit" name="submit" value="検索" class="submit-search">
    </form>
    <div class="devise-lists">
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </div>
  </div>
  <ul class="category-lists" id="category-lists">
    <li><%= link_to 'スポーツ', "#", class: "sports set"%></li>
    <li><%= link_to 'ゲーム', "#", class: "games set"%></li>
    <li><%= link_to '料理', "#", class: "cooks set"%><li>
    <li><%= link_to 'アウトドア', "#", class: "outdoors set"%><li>
    <li><%= link_to '音楽', "#", class: "musics set"%></li> 
    <li><%= link_to '友達', "#", class: "frend set"%></li>
  </ul>
</header>